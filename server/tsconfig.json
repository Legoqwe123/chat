{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2016",
            "dom"
        ],
        "declaration": false,
        "sourceMap": false,
        "outDir": "./dist",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "include": [
        "./*.ts",
    ]
}
